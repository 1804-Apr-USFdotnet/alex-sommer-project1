@model IEnumerable<RestaurauntLibrary.Review>

@{
    ViewBag.Title = "RevIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reviews for the Restauraunt</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RestID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewerRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewerComment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RestID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewerRating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewerComment)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRev", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteRev", new { id=item.ID })
        </td>
    </tr>
}

</table>
