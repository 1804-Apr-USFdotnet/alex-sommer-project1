@model IEnumerable<RestaurauntLibrary.Restauraunt>

@{
    ViewBag.Title = "GetByName";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restauraunts</h2>

<form asp-controller="Restauraunt" asp-action="GetAll">
    <p>
        Search by Name: <input type="text" name="searchStr" />
        <input type="submit" value="Search"
    </p>
</form>

<p>
    @Html.ActionLink(linkText: "Create New", actionName: "Create", controllerName: "Restauraunt") | 
    @Html.ActionLink(linkText: "Sort by Id", actionName: "GetAll", controllerName: "Restauraunt")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
